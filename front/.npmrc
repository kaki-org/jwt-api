# pnpm configuration
# Disable strict peer dependencies for compatibility with existing packages
strict-peer-dependencies=false

# Use npm registry
registry=https://registry.npmjs.org/

# Enable hoisting for better compatibility with Nuxt.js
hoist-pattern[]=*eslint*
hoist-pattern[]=*babel*
hoist-pattern[]=*nuxt*

# Auto install peer dependencies
auto-install-peers=true

# Enable shamefully-hoist for better compatibility with some packages
shamefully-hoist=false

# Set node-linker to isolated for better dependency isolation
node-linker=isolated

# Enable side-effects-cache for better performance
side-effects-cache=true
